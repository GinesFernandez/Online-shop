    <Page.Resources>
        <Thickness x:Key="FormMargin">5,5,5,5</Thickness>
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Uid="bBack" Label="Back" Icon="Back" Command="{Binding BackCommand}" />

